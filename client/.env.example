# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Google Maps API Key
# Required for address autocomplete feature in checkout
# See GOOGLE_PLACES_SETUP.md for setup instructions
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=secret

# Cart Address Functionality
# Options: "autocomplete" (Google Places autocomplete) or "manual" (manual input)
NEXT_PUBLIC_CART_ADDRESS_FUNC=manual

# Google Pay (Express Checkout) — Sandbox defaults
# Toggle to show/hide the Google Pay button in the cart
NEXT_PUBLIC_GOOGLE_PAY_ENABLED=true

# TEST or PRODUCTION (keep TEST while you’re in sandbox)
NEXT_PUBLIC_GOOGLE_PAY_ENV=TEST

# Merchant info
# In TEST, merchantId can be omitted; in PRODUCTION you must set your real Merchant ID
NEXT_PUBLIC_GOOGLE_PAY_MERCHANT_ID=
NEXT_PUBLIC_GOOGLE_PAY_MERCHANT_NAME="140d Galería de Arte (Sandbox)"

# Tokenization (required by Google Pay; for sandbox you can leave the example values)
# When you choose a real gateway (Stripe/Adyen/Braintree), set these accordingly.
NEXT_PUBLIC_GOOGLE_PAY_GATEWAY=example
NEXT_PUBLIC_GOOGLE_PAY_GATEWAY_MERCHANT_ID=exampleGatewayMerchantId

NEXT_PUBLIC_GOOGLE_PAY_LOCALE=es
NEXT_PUBLIC_REVOLUT_LOCALE=es

# Revolut Web SDK mode: 'sandbox' or 'production'
NEXT_PUBLIC_REVOLUT_MODE=sandbox

# Optional: Public API key (used by upsell or certain SDK features)
NEXT_PUBLIC_REVOLUT_PUBLIC_KEY=secret

WEB_APP_HIDDEN=true